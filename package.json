{
  "name": "my-react-electron",
  "version": "0.1.0",
  "description": "Simple boilerplate for developing an Electron app with React",
  "author": "Anh.Ho",
  "build": {
    "appId": "react.electron",
    "win": {
      "icon": "build/icon.png"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "antd": "^4.14.1",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.2.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "start-react": "react-app-rewired start",
    "build-react": "react-app-rewired build",
    "test-react": "react-app-rewired test --env=jsdom",
    "eject-react": "react-app-rewired eject",
    "build-electron": "electron-builder",
    "build-electron-win": "electron-builder --windows",
    "build": "npm run build-react && npm run build-electron",
    "build-win": "npm run build-react && npm run build-electron-win",
    "start": "concurrently \"cross-env BROWSER=none npm run start-react\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "electron": "^7.1.0",
    "electron-builder": "^22.1.0",
    "react-app-rewire-alias": "^1.0.3",
    "react-app-rewired": "^2.1.8",
    "wait-on": "^3.3.0"
  }
}
